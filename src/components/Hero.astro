---
import content from '../data/content.json';
import Typewriter from './Typewriter';

const { hero } = content;
---

<section id="hero" class="min-h-screen flex items-center justify-center px-4 py-20 relative">
  <!-- Animated background elements - Fixed position -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none" style="z-index: -5;">
    <div class="absolute w-[500px] h-[500px] bg-purple-500/30 rounded-full blur-3xl animate-float" style="top: 25%; left: 25%; margin-left: -250px; margin-top: -250px; z-index: 1;"></div>
    <div class="absolute w-[500px] h-[500px] bg-blue-500/30 rounded-full blur-3xl animate-float" style="bottom: 25%; right: 25%; margin-right: -250px; margin-bottom: -250px; animation-delay: 1s; z-index: 1;"></div>
    <div class="absolute w-[700px] h-[700px] bg-pink-500/20 rounded-full blur-3xl animate-float" style="top: 50%; left: 50%; margin-left: -350px; margin-top: -350px; animation-delay: 2s; z-index: 3;"></div>
    <div class="absolute w-[400px] h-[400px] bg-cyan-500/25 rounded-full blur-3xl animate-float" style="top: 33.33%; right: 33.33%; margin-right: -200px; margin-top: -200px; animation-delay: 1.5s; z-index: 1;"></div>
  </div>

  <div class="max-w-5xl mx-auto text-center relative z-10">
    <div class="animate-slide-down">
      <h1 class="text-6xl md:text-8xl font-bold mb-6 min-h-[120px] md:min-h-[180px] flex items-center justify-center">
        <Typewriter 
          client:load
          text={hero.titles || [hero.title]}
          typingSpeed={80}
          deletingSpeed={50}
          pauseDuration={2000}
          loop={false}
          loopOnce={true}
          showCursor={true}
          cursorCharacter="_"
          cursorBlinkDuration={0.7}
          className="text-gradient animate-gradient"
        />
      </h1>
    </div>
    
    <div class="animate-slide-up" style="animation-delay: 0.2s; opacity: 0; animation-fill-mode: forwards;">
      <p class="text-2xl md:text-3xl mb-4 text-purple-300 font-light">
        {hero.subtitle}
      </p>
    </div>
    
    <div class="animate-slide-up" style="animation-delay: 0.4s; opacity: 0; animation-fill-mode: forwards;">
      <p class="text-lg md:text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
        {hero.description}
      </p>
    </div>

    <div class="animate-fade-in" style="animation-delay: 0.6s; opacity: 0; animation-fill-mode: forwards;">
      <a 
        href="#info" 
        class="inline-block px-8 py-4 glass rounded-full text-lg font-medium hover:glow-effect transition-all duration-300 hover:scale-105 group"
      >
        <span class="text-gradient">探索更多</span>
        <span class="inline-block ml-2 group-hover:translate-x-1 transition-transform">→</span>
      </a>
    </div>
  </div>
</section>
