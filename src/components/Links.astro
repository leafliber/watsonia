---
import { Icon } from '@iconify/react';
import content from '../data/content.json';

const { links } = content;
---

<section id="links" class="py-20 px-4 relative z-10">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-bold mb-4 text-gradient animate-gradient">
        {links.title}
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full"></div>
    </div>

    <div class="flex flex-wrap justify-center gap-6 max-w-4xl mx-auto">
      {links.items.map((link, index) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="glass rounded-2xl p-8 hover:glow-effect transition-all duration-500 hover:scale-105 group text-center w-full sm:w-[calc(50%-0.75rem)] lg:w-[calc(25%-1.125rem)] min-w-[200px]"
          style={`animation-delay: ${index * 0.1}s;`}
        >
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <Icon 
              icon={link.icon}
              className="w-full h-full text-purple-400 group-hover:text-pink-400 transition-all duration-300 group-hover:scale-110"
              client:load
            />
          </div>
          <h3 class="text-xl font-semibold text-gradient group-hover:animate-gradient">
            {link.name}
          </h3>
        </a>
      ))}
    </div>
  </div>
</section>
