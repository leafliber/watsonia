---
import { Icon } from '@iconify/react';
import content from '../data/content.json';

const { info } = content;
---

<section id="info" class="min-h-screen flex items-center justify-center px-4 py-20">
  <div class="max-w-6xl mx-auto w-full">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-bold mb-4 text-gradient animate-gradient">
        {info.title}
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full"></div>
    </div>

    <div class="glass rounded-3xl p-8 md:p-12 mb-12 hover:glow-effect transition-all duration-500">
      <p class="text-xl md:text-2xl text-gray-300 leading-relaxed text-center max-w-3xl mx-auto">
        {info.content}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      {info.features.map((feature, index) => (
        <a
          href={feature.url}
          target={feature.url.startsWith('http') ? '_blank' : undefined}
          rel={feature.url.startsWith('http') ? 'noopener noreferrer' : undefined}
          class="glass rounded-2xl p-8 hover:glow-effect transition-all duration-500 hover:scale-105 group"
          style={`animation-delay: ${index * 0.2}s;`}
        >
          <div class="flex items-center justify-center w-16 h-16 mb-4 group-hover:scale-110 transition-transform duration-300">
            <Icon 
              icon={feature.icon}
              className="w-full h-full text-purple-400 group-hover:text-pink-400 transition-colors duration-300"
              client:load
            />
          </div>
          <h3 class="text-2xl font-semibold mb-3 text-gradient">
            {feature.title}
          </h3>
          <p class="text-gray-400 leading-relaxed">
            {feature.description}
          </p>
        </a>
      ))}
    </div>
  </div>
</section>
